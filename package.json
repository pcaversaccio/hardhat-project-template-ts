    "@types/mocha": "9.1.0",
    "@types/node": "17.0.21",
    "@typescript-eslint/eslint-plugin": "5.13.0",
    "@typescript-eslint/parser": "5.13.0",
    "chai": "4.3.6",
    "dotenv": "16.0.0",
    "eslint": "8.10.0",
    "eslint-config-prettier": "8.5.0",
    "ethereum-waffle": "3.4.0",
    "ethers": "5.5.4",
    "hardhat": "2.9.1",
    "hardhat-abi-exporter": "2.8.0",
    "hardhat-contract-sizer": "2.5.0",
    "hardhat-gas-reporter": "1.0.8",
